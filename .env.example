# RocketGraph Public API Environment Configuration
# Copy this file to .env and customize for your environment

# Application Settings
APP_NAME="RocketGraph Public API"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security Settings (REQUIRED - Generate secure values)
SECRET_KEY=your-super-secure-secret-key-here-change-this
API_KEY_SALT=your-api-key-salt-here-change-this

# Network Security
ALLOWED_HOSTS=localhost,127.0.0.1,api.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# XGT Database Settings
XGT_HOST=localhost
XGT_PORT=4367
XGT_USERNAME=admin
XGT_PASSWORD=your-xgt-password-here
XGT_USE_SSL=false
XGT_SSL_CERT=/path/to/xgt-server.pem
XGT_SERVER_CN=xgt.yourdomain.com

# MongoDB Settings (for API metadata)
MONGODB_URI=mongodb://localhost:27017/rocketgraph_api
MONGODB_DATABASE=rocketgraph_api

# Redis Settings (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Rate Limiting Settings
RATE_LIMITING_ENABLED=true
DEFAULT_RATE_LIMIT_PER_MINUTE=100
DEFAULT_RATE_LIMIT_PER_HOUR=1000
DEFAULT_RATE_LIMIT_PER_DAY=10000

# Authentication Settings
API_KEY_EXPIRY_DAYS=365

# LLM Settings (Optional)
LLM_PROVIDERS=openai,anthropic
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Headers
SECURITY_HEADERS_ENABLED=true